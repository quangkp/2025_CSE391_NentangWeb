  <script>
    let employees = JSON.parse(localStorage.getItem('employees_v2')) || [
      {name:'Fatima Beatriz',email:'FatimaBeatriz@gmail.com',phone:'0785674321',position:'Staff',gender:'Female'},
      {name:'Gabriel Henna',email:'GabrielHenna@gmail.com',phone:'035674321',position:'Staff',gender:'Male'},
      {name:'Charles Dya',email:'CharlesDya@gmail.com',phone:'0475864833',position:'Staff',gender:'Male'},
      {name:'Frank Lambo',email:'FrankLambo@gmail.com',phone:'0975444768',position:'Staff',gender:'Male'},
      {name:'Louis Tom',email:'LouisTom@gmail.com',phone:'0785688223',position:'Staff',gender:'Male'}
    ];
    let editingIndex = null;
    const tableBody = document.querySelector('#employeeTable tbody');
    const modal = document.getElementById('modal');
    const form = document.getElementById('employeeForm');
    const addBtn = document.getElementById('addBtn');
    const cancelBtn = document.getElementById('cancelBtn');
    const modalTitle = document.getElementById('modalTitle');
    const searchInput = document.getElementById('search');

    function renderTable(data = employees) {
      tableBody.innerHTML = '';
      if (data.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="6" style="color:#888;">No data found.</td></tr>';
        return;
      }
      data.forEach((emp, idx) => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${idx + 1}</td>
          <td>${emp.name}</td>
          <td>${emp.email}</td>
          <td>${emp.phone}</td>
          <td>${emp.position}</td>
          <td>
            <button class="edit" onclick="editEmployee(${idx})">Edit</button>
            <button class="delete" onclick="deleteEmployee(${idx})">Delete</button>
          </td>
        `;
        tableBody.appendChild(row);
      });
    }

    window.editEmployee = function(idx) {
      editingIndex = idx;
      modal.style.display = 'flex';
      modalTitle.textContent = 'Edit Employee';
      form.empId.value = idx;
      form.name.value = employees[idx].name;
      form.email.value = employees[idx].email;
      form.phone.value = employees[idx].phone;
      form.position.value = employees[idx].position;
      if (employees[idx].gender === 'Male') {
        form.gender[0].checked = true;
      } else {
        form.gender[1].checked = true;
      }
    };

    window.deleteEmployee = function(idx) {
      if (confirm('Are you sure you want to delete this employee?')) {
        employees.splice(idx, 1);
        localStorage.setItem('employees_v2', JSON.stringify(employees));
        renderTable();
      }
    };

    addBtn.onclick = function() {
      editingIndex = null;
      modal.style.display = 'flex';
      modalTitle.textContent = 'New Employee';
      form.reset();
      form.empId.value = '';
    };

    cancelBtn.onclick = function() {
      modal.style.display = 'none';
    };

    form.onsubmit = function(e) {
      e.preventDefault();
      const emp = {
        name: form.name.value.trim(),
        email: form.email.value.trim(),
        phone: form.phone.value.trim(),
        position: form.position.value,
        gender: form.gender.value
      };
      if (editingIndex === null) {
        employees.push(emp);
      } else {
        employees[editingIndex] = emp;
      }
      localStorage.setItem('employees_v2', JSON.stringify(employees));
      modal.style.display = 'none';
      renderTable();
    };

    window.onclick = function(event) {
      if (event.target == modal) modal.style.display = 'none';
    };

    function searchEmployee() {
      const keyword = searchInput.value.trim().toLowerCase();
      if (!keyword) {
        renderTable();
        return;
      }
      const filtered = employees.filter(emp =>
        emp.name.toLowerCase().includes(keyword) ||
        emp.email.toLowerCase().includes(keyword) ||
        emp.phone.includes(keyword) ||
        emp.position.toLowerCase().includes(keyword)
      );
      renderTable(filtered);
    }
    searchInput.oninput = searchEmployee;

    // Initial render
    renderTable();
  </script>
</body>
</html>
